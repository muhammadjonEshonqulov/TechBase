<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/very_large_text_size"
            android:orientation="vertical"
            android:padding="@dimen/left_right_margin_size">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/rubrik"
                android:text="@string/app_name"
                android:textColor="@color/cl_color_primary"
                android:textSize="50dp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_auth_lay"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/normal_size"
                android:hint="Foydalanuvchi nomi"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="@dimen/left_right_margin_size"
                app:endIconMode="clear_text"
                app:endIconTint="@color/cl_color_primary"
                app:startIconTint="@color/cl_color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/default_text_color"
                    tools:layout_editor_absoluteX="26dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_auth_lay"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:hint="Parol"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/cl_color_primary"
                app:endIconTintMode="src_in"
                app:startIconTint="@color/cl_color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:paddingEnd="@dimen/normal_size"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/default_text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/left_right_margin_size"
                app:cardBackgroundColor="@color/cl_color_primary"
                app:cardCornerRadius="@dimen/default_margin"
                app:cardElevation="@dimen/small_margin"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Kirish"
                    android:textColor="@color/white"
                    android:textSize="@dimen/standard_text_size" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>